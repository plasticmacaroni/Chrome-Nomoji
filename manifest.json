{
  "name": "Chrome-Nomoji",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "This extension replaces all emoji on your web pages.",
  "homepage_url": "https://jeffs.site",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "images/pixel.png"
  ],
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "<all_urls>"
  ],
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": [
      "src/inject/inject.js"
    ],
    "run_at": "document_end"
  }]
}